<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BinaryTree.SearchAndSort">
  <StackLayout>
    <StackLayout Orientation="Horizontal">
      <Entry x:Name="entNumber" HorizontalOptions="FillAndExpand" Keyboard="Numeric" />
      <Button x:Name="btnFind" Text="Find number" Clicked="btnFind_click"/>
      <Button Text="Shuffle" x:Name="btnShuffle" Clicked="btnShuffle_click" />
    </StackLayout>
    <StackLayout Orientation="Horizontal">
      
      <Button Text="Binary Sort" x:Name="btnSort" Clicked="btnSort_click" />
      <Button Text="Bubble Sort" x:Name="btnBubble" Clicked="btnBubble_click" />
      <Button Text="Tree Sort" x:Name="btnTree" Clicked="btnTree_click" />

    </StackLayout>
    <ScrollView>
      <StackLayout Orientation="Vertical">
        <Label x:Name="lblNumberList" />
        <Label x:Name="lblShuffledList" />
      </StackLayout>
    </ScrollView>
  </StackLayout>
</ContentPage>